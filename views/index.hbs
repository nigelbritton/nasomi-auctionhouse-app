<div class="container">
    <div class="py-2 text-center">
        <h1>Search Auction House</h1>
    </div>
    <div class="row justify-content-center">
        <div class="col-12 mb-3">
            <form id="searchForm" class="disabled" action="" method="post">
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <button id="searchFieldType" type="button" class="btn btn-secondary active">@</button>
                        </div>
                        <input id="searchField" type="text" autocomplete="off" class="form-control" placeholder="Character name; i.e. Shirukusan" value="" />
                    </div>
                </div>
                <div class="form-group">
                    <button class="btn btn-outline-secondary btn-lg btn-block" type="submit">Search</button>
                </div>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-12 mb-3">
            <div class="progress" style="display: none;">
                <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100" style="width: 25%"></div>
            </div>
            <div id="searchResults" class="list-group"></div>
        </div>
    </div>
</div>